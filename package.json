{
  "name": "student-learning-safety-platform",
  "version": "1.0.0",
  "description": "A comprehensive AI-powered platform for educational institutions featuring student management, learning assistance, and safety monitoring",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && pytest tests/ -v",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && flake8 . && black --check .",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && black . && isort .",
    "format:frontend": "cd frontend && npm run format",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "setup:frontend": "cd frontend && npm install",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "migrate": "cd backend && alembic upgrade head",
    "seed": "cd backend && python scripts/seed_data.py",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && find . -type d -name __pycache__ -delete && find . -name '*.pyc' -delete",
    "clean:frontend": "cd frontend && rm -rf node_modules dist .next",
    "security:audit": "npm audit && cd frontend && npm audit",
    "security:fix": "npm audit fix && cd frontend && npm audit fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/student-platform.git"
  },
  "keywords": [
    "education",
    "student-management",
    "safety-monitoring",
    "ai-powered",
    "learning-platform",
    "risk-assessment",
    "fastapi",
    "react",
    "typescript",
    "postgresql"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/student-platform/issues"
  },
  "homepage": "https://github.com/yourusername/student-platform#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}